<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.XpenseTracker" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary</item>
        <item name="colorOnPrimary">@color/primary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/primary</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="loginTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor" tools:targetApi="l">@color/primary</item>
        <item name="android:colorPrimary">@color/primary</item>
    </style>

    <style name="EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="backgroundTint">@color/primary</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/primary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingTop">@dimen/_8sdp</item>
        <item name="android:paddingBottom">@dimen/_8sdp</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:fontFamily">@font/gelasio</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="navTextInactive">
        <item name="android:textSize">@dimen/_8ssp</item>
    </style>

    <style name="navTextActive" >
        <item name="android:textSize">@dimen/_12ssp</item>

    </style>
</resources>